@model ITManagerProject.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Rejestracja";
    Layout = "_LoginLayout";
}

<section class="login-dark" style="height: 100%;">
    <form method="post">
        <div class="illustration"><i class="icon ion-ios-locked"></i></div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <input class="form-control" type="email" name="Email" placeholder="Email" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="form-control" type="password" name="Password" placeholder="Haslo" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="form-control" type="text" name="FirstName" placeholder="Imie" asp-for="FirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="form-control" type="text" name="LastName" placeholder="Nazwisko" asp-for="LastName">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="form-control" type="text" name="Country" placeholder="Panstwo" asp-for="Country">
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="form-control" type="text" name="City" placeholder="Miasto" asp-for="City">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="form-control" type="text" name="Address" placeholder="Adres" asp-for="Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="form-control" type="text" name="PostalCode" placeholder="Kod pocztowy" asp-for="PostalCode">
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        
        
        
        <div class="mb-3">
            <button class="btn btn-primary d-block w-100" type="submit">Zarejestruj</button>
        </div><a class="forgot" asp-area="" asp-controller="Account" asp-action="Login">Masz juz konto? Zaloguj sie</a>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}