@model ITManagerProject.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Logowanie";
    Layout = "_LoginLayout";
}
<section class="login-dark" style="height: 100%;">
    <form method="post">
        <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <input class="form-control" type="email" name="Email" placeholder="Email" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="form-control" type="password" name="Password" placeholder="Haslo" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button class="btn btn-primary d-block w-100" type="submit">Zaloguj</button>
        </div>
        <a class="forgot" asp-area="" asp-controller="Account" asp-action="Register">Nie masz konta? Zarejestruj sie</a>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}