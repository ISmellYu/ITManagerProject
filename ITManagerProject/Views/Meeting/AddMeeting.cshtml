@model ITManagerProject.ViewModels.AddMeetingViewModel
@{
    ViewBag.Title = "Dodaj spotkanie";
}

<!-- Make form for adding offer -->
<form method="post" asp-controller="Meeting" asp-action="AddMeeting">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Nazwa spotkania" asp-for="Title">
    </div>
    <div class="form-group">
        <textarea class="form-control" placeholder="Opis" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Lokalizacja" asp-for="Location">
    </div>
    <div class="form-group">
        <input type="datetime-local" class="form-control" placeholder="Start" min="@DateTime.Now.ToString("s")"  asp-for="Start">
    </div>
    <div class="form-group">
        <input type="datetime-local" class="form-control" placeholder="Koniec" min="@DateTime.Now.ToString("s")"  asp-for="End">
    </div>
    <div class="form-group">
        <input type="color" class="form-control" placeholder="Kolor" asp-for="Color">
    </div>
    <div class="form-group">
        <label><input type="checkbox" class="form-control" placeholder="hhh" id="fullday" asp-for="IsFullDay"/>Caly dzien</label>
    </div>
    <button type="submit" class="btn btn-primary">Dodaj</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}