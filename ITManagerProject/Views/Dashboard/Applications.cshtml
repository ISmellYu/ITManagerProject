@using Microsoft.AspNetCore.Authorization
@model ITManagerProject.ViewModels.ApplicationsViewModel
@inject IAuthorizationService _authorizationService

@{
    ViewBag.Title = "Aplikacje";
}


<div class="container-fluid">
    <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Aplikacje</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <table id="datatable" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Imie</th>
                                            <th>Nazwisko</th>
                                            <th>Panstwo</th>
                                            <th>Miasto</th>
                                            <th>Kod pocztowy</th>
                                            <th>Nazwa oferty</th>
                                            <th>Aplikowanie na</th>
                                            <th>Akcje</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var application in Model.Applications)
                                        {
                                            <tr>
                                                <td>@application.User.FirstName</td>
                                                <td>@application.User.LastName</td>
                                                <td>@application.User.Country</td>
                                                <td>@application.User.City</td>
                                                <td>@application.User.PostCode</td>
                                                <td>@application.Offer.Name</td>
                                                <td>@application.Offer.Role</td>
                                                <td>
                                                    <a asp-action="ShowApplication" asp-route-id="@application.Application.Id">Pokaz</a>
                                                    <a asp-action="RejectApplication" asp-route-id="@application.Application.Id">Usuń</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
