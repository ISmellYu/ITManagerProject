@model ITManagerProject.ViewModels.OffersViewModel
@{
    ViewBag.Title = "Oferty";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Oferty</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table id="datatable" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>Nazwa</th>
                                    <th>Opis</th>
                                    <th>Lokalzacja</th>
                                    <th>Rola</th>
                                    <th>Wynagrodzenie</th>
                                    <th>Akcje</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var offer in Model.Offers)
                                {
                                    <tr>
                                        <td>@offer.Name</td>
                                        <td>@offer.Description</td>
                                        <td>@offer.Location</td>
                                        <td>@offer.Role</td>
                                        <td>@offer.Salary</td>
                                        <td>
                                            <a asp-action="RemoveOffer" asp-route-id="@offer.Id">Usuń</a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- Add button for offers at the center of the page -->
                <div class="panel-footer text-center">
                    <a asp-action="AddOffer" class="btn btn-primary">Dodaj ofertę</a>
                </div>
            </div>
        </div>
    </div>
</div>


