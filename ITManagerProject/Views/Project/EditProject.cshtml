@model ITManagerProject.ViewModels.EditProjectViewModel


<div class="container-fluid">
    <form method="post" asp-action="EditProject" asp-controller="Project">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Nazwa projektu" asp-for="Name" value="@(Model.Name)">
        </div>
        <div class="form-group">
            <textarea class="form-control" placeholder="Opis" asp-for="Description" value="@(Model.Description)"></textarea>
        </div>
        <div class="form-group">
            <label>
                Status: 
                @Html.DropDownListFor(m => m.Status, Model.Statuses, new { @class = "Status"})
            </label>
        </div>
        <div class="form-group">
            <label>Priorytet: @Html.DropDownListFor(m => m.Priority, Model.Priorities, new { @class = "Priority"})</label>
        </div>
        <button type="submit" class="btn btn-primary">Zapisz</button>
    </form>
</div>